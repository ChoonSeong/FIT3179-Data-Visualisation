{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Persons Escaped From Lockup vs Outside Lockup in 2018",
  "data": {
    "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Data-Visualisation-Assignment-2/data/2018%20Escapes%20from%20Police%20Custody.csv"
  },
  "spacing": 0,
  "hconcat": [
    {
      "title": "Persons Escaped From Lockup",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "x": {
          "field": "Persons Escaped - From lockup",
          "aggregate": "sum",
          "title": "Number of Persons Escaped from Lockup",
          "axis": {"format": "s"},
          "sort": "descending"
        },
        "color": {
          "value": "#91bfdb"
        }
      }
    },
    {
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "text": {
          "field": "State/UT",
          "type": "nominal"
        }
      }
    },
    {
      "title": "Persons Escaped Outside Lockup",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "x": {
          "field": "Persons Escaped - Outside Lockup",
          "aggregate": "sum",
          "title": "Number of Persons Escaped Outside Lockup",
          "axis": {"format": "s"}
        },
        "color": {
          "value": "#fc8d59"
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
