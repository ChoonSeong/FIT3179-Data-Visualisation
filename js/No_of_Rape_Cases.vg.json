{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2018 Rape Cases Reported in India",
    "width": "container",
    "height": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Data-Visualisation-Assignment-2/js/ne_10m_admin_1_India_Official.json",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_India_Official"
        }
    },
    "projection": {
        "type": "mercator"
    },
    "params": [
        {"name": "highlight","select": {"type": "point", "on": "mouseover"}},
        {"name": "select", "select": "point"}
    ],
    "layer": [
        {
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Data-Visualisation-Assignment-2/data/2018%20Victims%20of%20Rape.csv"
                        },
                        "key": "State/UT",
                        "fields": [
                            "Cases Reported",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "datum['Cases Reported'] / (datum['Population'] / 1000000)", 
                    "as": "Rape Cases per 1,000,00 Population"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "cursor": "pointer"
            },
            "encoding": {
                "color": {
                    "field": "Rape Cases per 1,000,00 Population",
                    "type": "quantitative",
                    "scale":{
                        "type": "quantile",
                        "domain": [0, 2, 5, 10, 20, 50, 100],
                        "range": ["#ffffd4", "#fee391", "#fec44f", "#fe9929", "#d95f0e", "#993404"]
                    },
                    "title": "Rape Cases Rate"
                },
                "fillOpacity": {
                    "condition": {"param": "select", "value": 1},
                    "value": 0.3
                },
                "stroke":{
                    "condition": [
                        { "param": "select", "empty": false, "value": "black"},
                        { "param": "highlight", "empty": false, "value": "black"}
                    ],
                    "value": "white"
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "State/UT"
                    },
                    {
                        "field": "Rape Cases per 1,000,00 Population",
                        "type": "quantitative",
                        "title": "Rape Cases per 1,000,00 Population"
                    }
                ]
            }
        }
    ]
}