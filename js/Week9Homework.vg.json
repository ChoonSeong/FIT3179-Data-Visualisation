{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2018 Criminal Cases in India",
    "width": 800,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Week9-Homework/js/ne_10m_admin_1_India_Official.json",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_India_Official"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Week9-Homework/data/2018%20Cases%20against%20Police%20Personnels.csv"
                        },
                        "key": "State/UT",
                        "fields": [
                            "Number of Cases - Registered",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "datum['Number of Cases - Registered'] / (datum['Population'] / 1000000)", 
                    "as": "Cases per 1,000,000 Population"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Cases per 1,000,000 Population",
                    "type": "quantitative",
                    "scale":{
                        "type": "quantile",
                        "domain": [0, 1, 2, 5, 10, 20, 50],
                        "range": ["#ffffd4", "#fee391", "#fec44f", "#fe9929", "#d95f0e", "#993404"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "State/UT"
                    },
                    {
                        "field": "Cases per 1,000,000 Population",
                        "type": "quantitative",
                        "title": "Cases per 1,000,000 Population"
                    }
                ]
            }
        }
    ]
}