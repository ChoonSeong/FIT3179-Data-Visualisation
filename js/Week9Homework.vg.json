{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2018 Criminal Cases in India",
    "width": 800,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Week9-Homework/ne_10m_admin_1_India_Official.json",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_India_Official"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Week9-Homework/2018%20Cases%20against%20Police%20Personnels.csv"
                        },
                        "key": "State/UT",
                        "fields": [
                            "Number of Cases - Registered"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "color": {
                    "field": "Number of Cases - Registered",
                    "type": "quantitative",
                    "scale":{
                        "type": "quantile",
                        "domain": [0, 10, 50, 100, 200, 400, 800, 1600, 3340],
                        "range": ["#fde3b6", "#fdbb84", "#fd9a5a", "#fd7940", "#fd5a25", "#fd360d"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "State/UT"
                    },
                    {
                        "field": "Number of Cases - Registered",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}