{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Child vs Women Victims of Rape in India (2018)",
  "data": {
    "url": "https://raw.githubusercontent.com/ChoonSeong/FIT3179-Data-Visualisation/Data-Visualisation-Assignment-2/data/2018%20Victims%20of%20Rape.csv"
  },
  "spacing": 0,
  "params": [
    {
      "name": "State_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Andhra Pradesh",
          "Arunachal Pradesh",
          "Assam",
          "Bihar",
          "Chhattisgarh",
          "Goa",
          "Gujarat",
          "Haryana",
          "Himachal Pradesh",
          "Jammu and Kashmir",
          "Jharkhand",
          "Karnataka",
          "Kerala",
          "Madhya Pradesh", 
          "Maharashtra",
          "Manipur",
          "Meghalaya",
          "Mizoram",
          "Nagaland",
          "Orissa",
          "Punjab",
          "Rajasthan",
          "Sikkim",
          "Tamil Nadu",
          "Telangana",
          "Tripura",
          "Uttar Pradesh",
          "Uttaranchal",
          "West Bengal",
          "Andaman and Nicobar",
          "Chandigarh",
          "Dadra and Nagar Haveli",
          "Daman and Diu",
          "Delhi",
          "Lakshadweep",
          "Puducherry"
        ],
        "labels":[
          "Show All",
          "Andhra Pradesh",
          "Arunachal Pradesh",
          "Assam",
          "Bihar",
          "Chhattisgarh",
          "Goa",
          "Gujarat",
          "Haryana",
          "Himachal Pradesh",
          "Jammu and Kashmir",
          "Jharkhand",
          "Karnataka",
          "Kerala",
          "Madhya Pradesh",
          "Maharashtra",
          "Manipur",
          "Meghalaya",
          "Mizoram",
          "Nagaland",
          "Orissa",
          "Punjab",
          "Rajasthan",
          "Sikkim",
          "Tamil Nadu",
          "Telangana",
          "Tripura",
          "Uttar Pradesh",
          "Uttaranchal",
          "West Bengal",
          "Andaman and Nicobar",
          "Chandigarh",
          "Dadra and Nagar Haveli",
          "Daman and Diu",
          "Delhi",
          "Lakshadweep",
          "Puducherry"
        ],
        "name": "State/UT Selection: "
      }
    },
    {
      "name": "Minimum_Number_of_Child_Victims",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2500,
        "step": 100,
        "name": "Minimum Number of Child Victims: "
      }
    },
    {
      "name": "Minimum_Number_of_Women_Victims",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2500,
        "step": 100,
        "name": "Minimum Number of Women Victims: "
      }
    }
  ],
  "transform": [
    {"filter": "State_Selection == null || datum['State/UT'] == State_Selection"},
    {"filter": "datum['Child Victims of Rape (Below 18 Yrs) - Total Girl/Child Victims'] >= Minimum_Number_of_Child_Victims"},
    {"filter": "datum['Women Victims of Rape (Above 18 Yrs) - Total Women/Adult Victims'] >= Minimum_Number_of_Women_Victims"}
  ],
  "hconcat": [
    {
      "title": "Child Victims (Below 18 Yrs)",
      "mark": {
        "type": "bar", 
        "cornerRadius": 3,
        "cursor": "pointer"
      },
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "x": {
          "field": "Child Victims of Rape (Below 18 Yrs) - Total Girl/Child Victims",
          "aggregate": "sum",
          "title": "Number of Child Victims",
          "axis": {"format": "s"},
          "sort": "descending"
        },
        "color": {
          "value": "#91bfdb"
        },
        "tooltip": [
          {
              "field": "State/UT",
              "type": "nominal",
              "title": "State/UT"
          },
          {
              "field": "Child Victims of Rape (Below 18 Yrs) - Total Girl/Child Victims",
              "type": "quantitative",
              "title": "Number of Child Victims"
          }
        ]
      }
    },
    {
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "text": {
          "field": "State/UT",
          "type": "nominal"
        }
      }
    },
    {
      "title": "Women Victims (Above 18 Yrs)",
      "mark": {
        "type": "bar", 
        "cornerRadius": 3,
        "cursor": "pointer"
      },
      "encoding": {
        "y": {
          "field": "State/UT",
          "type": "nominal",
          "axis": null,
          "title": "State/UT"
        },
        "x": {
          "field": "Women Victims of Rape (Above 18 Yrs) - Total Women/Adult Victims",
          "aggregate": "sum",
          "title": "Number of Women Victims",
          "axis": {"format": "s"}
        },
        "color": {
          "value": "#fc8d59"
        },
        "tooltip": [
          {
              "field": "State/UT",
              "type": "nominal",
              "title": "State/UT"
          },
          {
              "field": "Women Victims of Rape (Above 18 Yrs) - Total Women/Adult Victims",
              "type": "quantitative",
              "title": "Number of Women Victims"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
